      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/home-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Tela inicial com planos de treino importados"
    },
    {
      "src": "screenshots/workout-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Tela de execução de exercícios durante treino"
    },
    {
      "src": "screenshots/home-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Interface desktop com visão completa dos treinos"
    }
  ],
  "shortcuts": [
    {
      "name": "Importar Treino",
      "short_name": "Importar",
      "description": "Importar novo plano de treino usando ID",
      "url": "/aluno.html#import",
      "icons": [
        {
          "src": "icons/shortcut-import.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Meus Planos",
      "short_name": "Planos",
      "description": "Ver todos os planos de treino",
      "url": "/aluno.html#plans",
      "icons": [
        {
          "src": "icons/shortcut-plans.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Treino Ativo",
      "short_name": "Treino",
      "description": "Acessar treino em andamento",
      "url": "/aluno.html#active-workout",
      "icons": [
        {
          "src": "icons/shortcut-workout.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+meustrenios",
      "url": "/aluno.html?import=%s"
    }
  ],
  "share_target": {
    "action": "/share-workout",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/open-workout",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"]
      }
    }
  ],
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "id": "com.meustrenios.pwa",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "notifications"
  ],
  "features": [
    {
      "name": "offline-support",
      "description": "Funciona sem conexão com internet"
    },
    {
      "name": "workout-tracking",
      "description": "Acompanhamento completo de treinos"
    },
    {
      "name": "progress-monitoring",
      "description": "Monitoramento de progresso e estatísticas"
    },
    {
      "name": "plan-import",
      "description": "Importação de planos via ID ou arquivo"
    }
  ]
}