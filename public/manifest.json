{
  "name": "JS Fit - Aluno Training App",
  "short_name": "JS Fit",
  "description": "Aplicativo completo para acompanhamento de treinos personalizados. Importe planos do seu personal trainer e acompanhe seu progresso.",
  "start_url": "/aluno.html",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#2563eb",
  "background_color": "#ffffff",
  "lang": "pt-BR",
  "dir": "ltr",
  "categories": ["fitness", "health", "lifestyle", "sports"],
  "icons": [
    {
      "src": "icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
