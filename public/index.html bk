    <script>
        // Verificar status da API
        async function checkSystemStatus() {
            const statusEl = document.getElementById('systemStatus');
            
            try {
                const response = await fetch('/api/health');
                const data = await response.json();
                
                if (data.status === 'online') {
                    statusEl.innerHTML = `
                        <span>Sistema Online</span>
                        <small>‚Ä¢ ${data.storage?.totalWorkouts || 0} treinos dispon√≠veis</small>
                    `;
                    statusEl.style.background = 'linear-gradient(135deg, #30d158, #28a745)';
                } else {
                    throw new Error('Sistema com problemas');
                }
            } catch (error) {
                statusEl.innerHTML = `
                    <span>Modo Offline</span>
                    <small>‚Ä¢ Funcionalidades locais dispon√≠veis</small>
                `;
                statusEl.style.background = 'linear-gradient(135deg, #ffa726, #ff9800)';
            }
        }

        // Executar quando a p√°gina carregar
        document.addEventListener('DOMContentLoaded', () => {
            checkSystemStatus();
            
            // Verificar periodicamente
            setInterval(checkSystemStatus, 60000); // A cada minuto
        });

        // Registrar Service Worker se dispon√≠vel
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then(registration => {
                        console.log('SW registered: ', registration);
                    })
                    .catch(registrationError => {
                        console.log('SW registration failed: ', registrationError);
                    });
            });
        }

        // Analytics simples
        if (window.location.hostname !== 'localhost') {
            // Adicionar Google Analytics ou similar aqui
            console.log('P√°gina inicial carregada');
        }
    </script>
